{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}} | Foodfy</title>
{% endblock%}

{% block content %}

    <div class="container">
        <div class="image_recipe-container">
            <img src="{{item.image}}" alt="{{item.title}}">
        </div>
        
        <div class="title_author">
            <h1>{{item.title}}</h1>
            <p>por {{item.author}}</p>
        </div>

        <div class="ingredients">
            <section class="topic_button" id="ingredients">
                <h1>Ingredientes</h1>
                <h4 id = "1">ESCONDER</h4>
            </section>
            <div class="topic_content_ingredients">
                <ul id ="content">
                {%for ingredient in item.ingredients%}
                    <li>{{ingredient}}</li>
                {% endfor %}
                </ul>
            </div>
        </div>

        <div class="preparation">
            <section class="topic_button" id="preparation">
                <h1>Modo de preparo</h1>
                <h4 id = "2">MOSTRAR</h4>
            </section>
            <div class="topic_content_preparation hide">
                <ul id ="content">
                {%for preparation_mode in item.preparations_mode%}
                    <li>{{preparation_mode}}</li>
                {% endfor %}
                </ul>
            </div>
        </div>

        <div class="information">
            <section class="topic_button" id="information">
                <h1>Informações adicionais</h1>
                <h4 id = "3">MOSTRAR</h4>
            </section>
            <div class="topic_content_information hide">
                <p>{{item.information}}</p>
            </div>
        </div>

    </div>
    
    <script src="/scripts.js"></script>

{% endblock %}